<li>
  <%= content_tag "a", href: url_for(href), class: class_map("relative block px-3 py-2 transition": true, "text-orange-600": active?, "hover:text-orange-600": !active?) do %>
    <%= title %>
    <% if active? %>
      <span class="absolute inset-x-1 -bottom-px h-px bg-gradient-to-r from-orange-600/0 via-orange-600/40 to-orange-600/0" />
    <% end %>
  <% end %>
</li>
