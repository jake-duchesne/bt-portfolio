<div class="overflow-hidden bg-white shadow sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6">
    <div class="flex flex-row justify-between"> 
      <%= svg @image, class: "w-48" %>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">Time in Role</dt>
        <dd class="mt-1 font-bold text-sm text-black"><%= @start_date %> - Current</dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">Role</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @role %></dd>
      </div>
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">Location</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @location %></dd>
      </div>
    </div>
  </div>
    
  <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
    <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
      <div class="sm:col-span-2">
        <dt class="text-sm font-medium text-gray-500 mb-1">Tech</dt>
        <%= tech %>
      </div>
      <%= content_section %>
    </dl>
  </div>
</div>
